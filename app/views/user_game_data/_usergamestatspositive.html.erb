<div class="vh-100 page-container d-flex align-items-center d-flex justify-content-center px-4 text-center">

  <h1><strong>Exercise Stats</strong></h1>

  <div class="col-md-8 select-mode-btn"> <!--- need to be fixed -->
    <h5 class="text-center text-justify text-black text-wrap fs-6"><strong> Workout time: <%= (@user_game_data.time_taken)/60%> mins</strong></h5>
      <h5 class="text-center text-black text-wrap fs-6">
        <% if @user_game_data.bonus_finish %>
          <%= "Bonus round completed" %>
        <% end %><br>
      </h5>
  </div>

<div class="d-flex flex-column">
  <!-- XP Earned -->
    <div class= "xp-container" style="width:65%">
      <h5 class = "text-white"><strong><%= @user_game_data.game_xp %> XP Earned</strong></h5>
      <div class="progress-bar">
        <div class="game-progressed-bar" data-game-target="bar"></div>
      </div>
    </div>

  <!-- Level (to insert level with yx code) -->

  <div class="col-md-8">
    <h5 class = "text-white"><strong>You leveled up!</strong></h5>
  </div>

  <!-- Badges (to insert badge user earned, how to relate to game) -->
  <div class="col-md-8">
    <h5 class = "text-white"><strong>Badge Earned!</strong></h5>
  </div>

 </div>


  <div class="main-orange-btn">
    <strong><%= link_to "Play Again?", mode_select_rooms_path , style: "color: white; text-decoration: none;"%></strong>
  </div>

  <div class="gray-modal-btn">
    <strong><%= link_to "Exit", root_path , style: "color: black; text-decoration: none;"%></strong>
  </div>

</div>

<div class="bg-container">
  <div class="bg-color">
    <div class="bg-infinite">
    </div>
  </div>
</div>
