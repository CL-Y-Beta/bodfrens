<div class="container main">
  <article class="select">Select Mode</article>
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#singleModal">
    Single Player
  </button>
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#multiModal">
    MultiPlayer
  </button>
  <button type="button" class="btn btn-primary" id="cancel-btn">Cancel</button>

<!--------Single Modal-------->
  <div class="modal fade" id="singleModal" tabindex="-1" aria-labelledby="singleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
        </div>
        <div class="modal-body">
          Start a single player match?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary">Yes</button>
          <button type="button" class="btn btn-primary">No</button>
        </div>
      </div>
    </div>
  </div>
</div>
<!--------------------------->

<!--------Multi Modal-------->
  <div class="modal fade" id="multiModal" tabindex="-1" aria-labelledby="multiModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
        </div>
        <div class="modal-body">
          Start a multiplayer match?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary">Yes</button>
          <button type="button" class="btn btn-primary">No</button>
        </div>
      </div>
    </div>
  </div>
<!--------------------------->
</div>











